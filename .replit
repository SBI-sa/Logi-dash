modules = ["nodejs-20", "postgresql-16", "bun"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web Server"

[[workflows.workflow]]
name = "Web Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bunx serve dist -l 5000 --single --no-compression"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 33673
externalPort = 3000

[[ports]]
localPort = 41475
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
run = ["bunx", "serve", "dist", "-l", "5000"]
build = ["bun", "run", "build"]
